{
	"extends": "./.svelte-kit/tsconfig.json",

	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,

		// oxymoron
		"strict": true,
		"allowJs": true,
	}
}
